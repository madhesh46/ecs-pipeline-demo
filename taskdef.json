{
  "family": "nginx-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "nginx-container",
      "image": "699582537231.dkr.ecr.ap-south-1.amazonaws.com/ecs-pipeline-demo:index-only",
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "command": ["sh", "-c", "cp /tmp/index.html /usr/share/nginx/html/index.html && nginx -g 'daemon off;'"],
      "environment": [],
      "mountPoints": [
        {
          "sourceVolume": "index-volume",
          "containerPath": "/tmp",
          "readOnly": false
        }
      ],
      "volumesFrom": [],
      "systemControls": []
    }
  ],
  "volumes": [
    {
      "name": "index-volume",
      "host": {}
    }
  ],
  "placementConstraints": [],
  "requiresCompatibilities": ["EC2"],
  "tags": [
    {
      "key": "Project",
      "value": "ECSPipelineDemo"
    }
  ]
}

